<div class="container mt-5 h2 border border-primary" style="width:500px;">
    <form class="mt-5" action="/main" method="POST">
        <label for="username" class="form-label">아이디</label>
        <input id="username" type="text" name="username" class="form-control mt-2" placeholder="아이디를 입력해주세요">
        
        <label for="password" class="form-label mt-5">비밀번호</label>
        <input id="password" type="password" name="password" class="form-control mt-2" placeholder="비밀번호를 입력해주세요">
       
        <div class="m-5">
            <input type="submit" class="btn btn-success btn-lg me-3" value="로그인">
            <a href="/register" class="btn btn-danger btn-lg">회원가입</a>
        </div>
        
        
        
    </form>

  
</div>